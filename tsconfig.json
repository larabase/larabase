{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowJs": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node",
      "jquery",
      "bootstrap",
    ],
    "paths": {
      "ziggy-js": [
        "./vendor/tightenco/ziggy"
      ],
      "@/*": [
        "./resources/js/*"
      ]
    },
    "outDir": "./public"
  },
  "typeRoots": [
    "./node_modules/@types",
    "./resources/js"
  ],
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx",
    "resources/js/**/*.vue",
    "resources/js/**/*.js",
    "resources/js/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "vendor"
  ]
}